#cloud-config

runcmd:
 - [ sh, -c, "sed -i.bak \"s%.*zookeeper.*%$(curl -s http://169.254.169.254/latest/meta-data/local-ipv4) zookeeper.service.{{ cluster_domain }}%\" /etc/hosts" ]
 - [ sh, -c, "sed -i.bak \"s%.*mesos-leader.*%$(curl -s http://169.254.169.254/latest/meta-data/local-ipv4) zookeeper.service.{{ cluster_domain }}%\" /etc/hosts" ]
 - [ sh, -c, "sed -i.bak \"s%.*namenode.*%$(curl -s http://169.254.169.254/latest/meta-data/local-ipv4) zookeeper.service.{{ cluster_domain }}%\" /etc/hosts" ]
 - [ sh, -c, "sed -i.bak \"s%.*accumulo-leader.*%$(curl -s http://169.254.169.254/latest/meta-data/local-ipv4) zookeeper.service.{{ cluster_domain }}%\" /etc/hosts" ]
 - [ sh, -c, "sed -i.bak \"s%.*monitoring.*%$(curl -s http://169.254.169.254/latest/meta-data/local-ipv4) zookeeper.service.{{ cluster_domain }}%\" /etc/hosts" ]
 - [ sh, -c, "sed -i.bak \"s%localhost:8081%$(curl -s http://169.254.169.254/latest/meta-data/public-hostname):8081%\" /opt/grafana-*/config.js" ]
 - [ sh, -c, "sed -i.bak \"s%localhost:9200%$(curl -s http://169.254.169.254/latest/meta-data/public-hostname):9200%\" /opt/grafana-*/config.js" ]
